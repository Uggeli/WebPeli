{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./wwwroot/dist",
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"]
        },
        "types": ["@webgpu/types"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"]
}